
<h3>Post a Comment</h3>

<%= form_for  [@article,@comment]  do |f| %>
<div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :comment_email %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :comment_name %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, id: :comment_body %>
  </div>
  
  <div>
    <%= f.submit 'Submit' %>
  </div>

<% end %>